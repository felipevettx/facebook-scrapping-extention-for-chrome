{
  "manifest_version": 3,
  "name": "Facebook Marketplace Scraper",
  "version": "1.0",
  "description": "Scrape data from Facebook Marketplace",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://*.facebook.com/*", "https://www.facebook.com/marketplace/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*", "<all_urls>"],
      "js": ["content.js"]
    }
  ]
}