{
  "manifest_version": 3,
  "name": "Vettx Listings Downloader",
  "version": "1.5",
  "description": "Downloader of data from Facebook Marketplace",
  "permissions": [ 
  "activeTab",
  "storage",
  "tabs",
  "downloads",
  "scripting",
  "cookies",
  "https://www.facebook.com/",
  "https://*.vettx.com/*"],
  "host_permissions": [
    "https://*.facebook.com/*",
    "https://www.facebook.com/marketplace/*",
    "https://*.vettx.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*", "https://*.vettx.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
